<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#000000"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#c86945"
        android:padding="16dp"
        android:text="Luis Antonio Tobar Gonzalez."
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="250dp"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnCalculadoraIMC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#c86945"
        android:textColor="#000000"
        android:layout_marginBottom="25dp"
        android:text="Calculadora IMC"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnConvertidorMoneda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#c86945"
        android:textColor="#000000"
        android:layout_marginBottom="25dp"
        android:text="Convertidor de Moneda"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#c86945"
        android:padding="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="80dp"
        android:text="Ingeniería Informática."
        android:textColor="#000000"
        android:textSize="20dp" />

</LinearLayout>
